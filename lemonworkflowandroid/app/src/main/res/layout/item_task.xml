<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llItem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp90"
    android:background="@color/white">

        <TextView
            android:id="@+id/item_task_def"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp15"
            android:paddingTop="@dimen/dp4"
            android:paddingBottom="@dimen/dp5"
            android:textColor="@color/emphasisTextview"
            android:lines="1"
            android:layout_marginHorizontal="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            tools:text="嗯嗯，就是" />
        <TextView
            android:id="@+id/item_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp13"
            android:paddingTop="@dimen/dp2"
            android:paddingBottom="@dimen/dp5"
            android:textColor="@color/defaultTextview"
            android:layout_below="@id/item_task_def"
            android:maxLines="3"
            android:lineSpacingExtra="2.5dp"
            android:layout_marginHorizontal="@dimen/dp10"
            android:ellipsize="end"
            tools:text="嗯嗯，嗯嗯" />
        <TextView
            android:id="@+id/item_task_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp11"
            android:paddingTop="@dimen/dp2"
            android:lines="1"
            android:paddingBottom="@dimen/dp5"
            android:textColor="@color/color_8c8c8c"
            android:layout_below="@id/item_task_name"
            android:layout_marginHorizontal="@dimen/dp10"
            tools:text="嗯嗯，就是" />
        <View
            android:layout_alignParentBottom="true"
            style="@style/Line_e0e0e0_Horizontal"/>

</RelativeLayout>
